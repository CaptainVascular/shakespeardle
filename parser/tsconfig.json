{
	"compilerOptions": {
		"target": "es2020",
		"strict": true,
		"preserveConstEnums": true,
		"sourceMap": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"paths": {
			"*": [
				"./src/*",
				"./node_modules/*"
			]
		}
	},
	"include": [
		"./src/**/*"
	]
}
